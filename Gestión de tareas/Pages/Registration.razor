	@page "/Register"


	<div class="container">
		<h3>Registrar</h3>

	@code {

		private string User { get; set; } = string.Empty;
		private string Email { get; set; } = string.Empty;
		private string Password { get; set; } = string.Empty;
	}
		<form>
			
			<label>Usuario:</label>
			<input type="text" @bind="User" placeholder="Ingrese su usuario" required />

			<br/>
			<br/>
			<label>Correo Electronico:</label>
			<input type="text" @bind="Email" placeholder="Ingrese su correo" required />
			 
			<br/>
			<br/>
			<label>Contraseña:</label>
			<input type="text" @bind="Password" placeholder="Ingrese su contraseña" required />		

			<br/>
			<br/>
			<button type="submit">Registrar</button>
		

		</form>

	</div>
	
	
